# Telegram Bot Configuration
# Получите токен у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Database Configuration (SQLite)
# По умолчанию: data/task_bot.db
# Файл базы данных будет создан автоматически
DATABASE_PATH=data/task_bot.db

# Session Secret (любая случайная строка для безопасности)
SESSION_SECRET=your_random_secret_key_here

# Timezone Configuration (опционально)
# По умолчанию: Europe/Kaliningrad
# Другие примеры: Europe/Moscow, Europe/Kiev, Asia/Almaty, Europe/Minsk
TIMEZONE=Europe/Kaliningrad

# Logging Configuration (опционально)
# Уровень логирования: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
